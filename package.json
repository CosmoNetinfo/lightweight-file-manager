{
  "name": "lightweight-file-manager",
  "version": "2.0.0",
  "description": "Un file manager ultraleggero e performante come alternativa a Windows Explorer",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"browser-env=false npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.cosmonet.cosmonav",
    "productName": "CosmoNav",
    "copyright": "Copyright Â© 2026 CosmoNet",
    "extends": null,
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/main.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CosmoNav",
      "license": "LICENSE"
    },
    "extraMetadata": {
      "main": "public/main.js"
    }
  },
  "keywords": [
    "file-manager",
    "explorer",
    "react",
    "lightweight",
    "performance"
  ],
  "author": "CosmoNet",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "extract-zip": "^2.0.1",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.263.1",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  }
}
